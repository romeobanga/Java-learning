<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<jsp-config> <!-- Permet d'inclure automatiquement la balise <%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %> dans toutes 
	les pages jsp -->
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
			<!-- on utilise  <include-coda> si on veut inclure un fichier en fin de page-->
		</jsp-property-group>
	</jsp-config>
</web-app>